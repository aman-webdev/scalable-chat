{
  "extends": "@repo/typescript-config/nextjs.json",
  "paths": {
  "@app/*": ["./app/*"],
  "@assets/*": ["./assets/*"],
  "@components/*": ["./@components/*"],
  "@styles/*": ["./styles/*"],
  "@utils/*": ["./utils/*"]
},
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
